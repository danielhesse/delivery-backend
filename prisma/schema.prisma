generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deliveryman {
  id    String @id @default(uuid())
  name  String
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("deliverymans")
}

model Customer {
  id          String  @id @default(uuid())
  name        String
  email       String  @unique
  phone       String  @unique
  hasWhatsapp Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("customers")
}
